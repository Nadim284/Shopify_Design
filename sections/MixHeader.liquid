<header
      class="h-[12vh] w-full bg-white flex items-center justify-center  sticky top-0 z-50 p-4"
    >
      <div class="w-[95%] lg:w-[90%] flex items-center justify-between gap-8">
        <!-- Logo -->
        <div class="h-[10vh] min-w-[120px] flex items-center">
          {% if section.settings.logo %}
            <img
              class="h-12 w-auto object-contain"
              src="{{ section.settings.logo | image_url: width: 120 }}"
              alt="Logo"
            />
          {% elsif section.settings.logo_text %}
            <span class="text-gray-700 font-medium text-sm">{{ section.settings.logo_text }}</span>
           
          {% endif %}
        </div>

        <div class="content flex items-center w-[80%] hidden md:flex">
          <!-- Menu Button -->
          <div
            class="h-[6vh] px-6 bg-black flex items-center justify-center rounded-xl cursor-pointer"
          >
            <img class="h-[2.5vh] invert" src="{{ 'menu.png' | asset_url }}" alt="Menu" />
            <span class="text-white font-medium text-sm">Menu</span>
          </div>

          <!-- Catalog Dropdown -->
          <div
            class="h-[6vh] w-[20%] px-4 bg-gray-300 flex items-center justify-around rounded-l-xl border-r-2 border-r-black/3"
          >
            <span class="text-gray-700 font-medium text-sm">All products</span>
            <img
              class="h-[1.5vh] opacity-60"
              src="{{ 'down-arrow.png' | asset_url }}"
              alt="Down"
            />
          </div>

          <!-- Search Bar -->
          <div
            class="flex-1 h-[6vh] bg-gray-300 flex items-center justify-between px-6 gap-3 rounded-r-xl"
          >
            <input
              type="text"
              class="bg-transparent border-none outline-none w-full text-sm text-gray-700 placeholder:text-gray-400"
              placeholder="Search for anything..."
            />
            <img
              class="h-4 w-4 opacity-40 group-focus-within:opacity-100 transition-opacity"
              src="{{ 'search.png' | asset_url }}"
              alt="Search"
            />
          </div>
        </div>

        <!-- Profile & Cart -->
        <div class="flex items-center gap-2 hidden md:flex">
          <div
            class="h-10 w-10 flex flex-col items-center justify-center rounded-full bg-gray-50 group-hover:bg-gray-100 transition-colors"
          >
            <img
              class="h-[2.5vh] opacity-70"
              src="{{ 'profile.png' | asset_url }}"
              alt="Profile"
            />
            <span class="text-sm font-semibold text-gray-800">Login</span>
          </div>

          <div
            class="h-10 w-10 flex flex-col items-center justify-center rounded-full bg-gray-50 group-hover:bg-gray-100 transition-colors relative"
          >
            <img
              class="h-[2.5vh] opacity-70"
              src="{{ 'shopping-bag.png' | asset_url }}"
              alt="Cart"
            />
            <!-- Badge -->
            <span
              class="absolute -top-1 -right-1 bg-red-500 text-white text-[10px] font-bold h-4 w-4 flex items-center justify-center rounded-full border-2 border-white shadow-sm transition-transform group-hover:scale-110"
            >
              0
            </span>
            <span class="text-sm font-semibold text-gray-800">Cart</span>
          </div>
        </div>
      </div>

      <!-- // For mobile use icon -->
      <div class="md:hidden w-[4vh] h-[6vh] flex items-center justify-center">
        <img src="{{ 'menu.png' | asset_url }}" alt="Menu" />
      </div>
    </header>


    {% schema %}
    {
      "name": "Mix Header",
      "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
          },
          {
            "type": "text",
            "id": "logo_text",
            "label": "Logo Text"
          }
        ]
    }
    {% endschema %}